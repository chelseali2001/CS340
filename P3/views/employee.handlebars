<html>
<h1>Company Database</h1>
<h2>Current Employees:</h2>
<h3>
  <!--Chosen project information-->
  {{#with project}}
  Project {{Pnumber}}: {{Pname}} located in {{Plocation}} 
  {{/with}}
</h3>
<!--Database Table--->
<table>
	<thead>
    <!--Row names-->
    <tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Salary</th>
		<th>Dno</th>
    </tr>
	</thead>
  <!--Table contents-->
  <tbody>
    {{#each employees}}
      <tr>
        <td>{{this.Fname}}</td>
        <td>{{this.Lname}}</td>
  			<td>{{this.Salary}}</td>
  			<td>{{this.Dno}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<!--Filtering the employees by project-->
<form id='filter_employees' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label>Filter Employees by Project: </label>
    <!--Existing projects to choose from-->
    <select id='project_filter' name="project"> 
        {{#each projects}}
        <option value="{{Pnumber}}">{{Pname}}</option>
        {{/each}}
    </select>
    <input id="filter_button" type="button" value="Filter" onclick="filterEmployeeByProject()">
    <input id="filter_button" type="button" value="Clear Filters" onclick="clearFilters()">
</form>
<br>
<!--Filtering the employees by first name-->
<form id='search_employees' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search all employees for first names starting with: </label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input id="filter_button" type="button" value="Search" onclick="searchEmployeeByFirstName()">
</form>
